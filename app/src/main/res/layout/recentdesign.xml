<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EEE"
        android:elevation="12dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="10dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:text="Problem:"
                android:textColor="#000"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/problemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/name"
                android:paddingTop="10dp"
                android:text="Tokitsukaze and Strange Inequality"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/verdict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problemName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:text="Verdict:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/problemVerdict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problemName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/verdict"
                android:paddingTop="5dp"
                android:text="TIME_LIMIT_EXCEEDED"
                android:textColor="#6CB86A"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/languageUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problemVerdict"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Language:"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/problemLanguageUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problemVerdict"

                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/languageUsed"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="GNU C++17"
                android:textColor="#000"
                android:textSize="20sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>